{
  "files.exclude": {
    // 📙 » others
    ".github": true,
    // "dist": true,
    // "build": true,
    "images": true,

    // ⚙️ » config
    // "sheriff.config.ts": true,
    "**/**/tsconfig*": true,
    "svgo.config.js": true,
    "**/**/*code-workspace": true,
    // "package.nls*.json": true, // all i18n package.json files
    "material-colors.yml": true,
    "changelog.config.json": true,

    // 🧼 » linters & styles
    "**/**/.editorconfig": true,
    "biome.jsonc": true,

    // 📝 » documents
    "README.md": true,
    "LICENSE*": true,
    "CHANGELOG*": true,
    "CONTRIBUTING*": true,
    "CODE_OF_CONDUCT*": true,
    "src/architecture.md": true,

    // 🗑️ » trash
    "node_modules": true,
    ".devcontainer": true,
    ".npmignore": true,
    "logo.{png,svg}": true,
    ".vscodeignore": true,
    ".gitignore": true,
    ".gitattributes": true,
    ".git": true,
    ".vscode-test": true,
    // ".vscode": true,
    "bunfig.toml": true,
    "bun.lockb": true,

    // 🧪 » tests
    "**/**/test": true,
    "**/**/tests": true
  },
  "search.exclude": {
    "out": true,
    ".git": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "quickfix.biome": "explicit",
      "source.organizeImports.biome": "explicit"
    }
  }
}
